    <repository>
      <id>repo</id>
      <name>Repository Name</name>
      <url>file://C:/Data/tools/maven-repository</url>
    </repository>

    <snapshotRepository>
      <id>repo2</id>
      <name>Repository Name</name>
      <url>file://C:/Data/tools/maven-repository</url>
    </snapshotRepository>
  </distributionManagement>

</project>
